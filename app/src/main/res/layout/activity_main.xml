<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/LeftMoveButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="82dp"
        android:layout_weight="1"
        android:background="#000000"
        android:contentDescription="@string/todo"
        android:scaleType="fitCenter"
        android:text="@string/left"
        app:layout_constraintBottom_toBottomOf="@+id/RightMoveButton"
        app:layout_constraintEnd_toStartOf="@+id/HitButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/RightMoveButton"
        app:srcCompat="@drawable/ic_action_name"
        tools:ignore="SpeakableTextPresentCheck,VisualLintBounds,DuplicateSpeakableTextCheck" />

    <ImageButton
        android:id="@+id/RightMoveButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="96dp"
        android:background="#000000"
        android:contentDescription="@string/todo1"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/HitButton"
        app:layout_constraintTop_toTopOf="@+id/HitButton"
        app:srcCompat="@drawable/ic_right_action_name"
        tools:ignore="SpeakableTextPresentCheck,VisualLintBounds" />

    <ImageButton
        android:id="@+id/HitButton"
        android:layout_width="222dp"
        android:layout_height="183dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="96dp"
        android:background="#000000"
        android:contentDescription="@string/todo3"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/RightMoveButton"
        app:layout_constraintStart_toEndOf="@+id/LeftMoveButton"
        app:srcCompat="@drawable/ic_hit_action_name"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/PauseButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="13dp"
        android:background="#000000"
        android:contentDescription="@string/todo"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/LeftMoveButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_play_action_name"
        tools:ignore="VisualLintBounds,SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/TestButton"
        android:layout_width="131dp"
        android:layout_height="51dp"
        android:layout_marginStart="526dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/peacock_blue"
        android:text="@string/bluetooth1"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/PauseButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.044"
        tools:ignore="VisualLintBounds,TextSizeCheck,SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>